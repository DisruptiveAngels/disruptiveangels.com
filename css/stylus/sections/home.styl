.home-main
  display flex
  height 100vh
  justify-content center
  align-items center
  background url('/img/main-bg.jpg') center no-repeat
  background-size cover
  wrapped()
  text-align center
  
  .text-container
    lost-column 8.5/12
  
  .title__main
  .sub-title__main
    @extend $text-white
    
.home-about
  display flex
  align-items center
  min-height 80vh
  wrapped-left()
  
  .text-container
    lost-column 5/12
    lost-offset 1/12

  figure
    lost-column 1/2

.home-services
  display flex
  
  .title-tag
    color white
    
  &--description
    wrapped(70%)
    font-family 'velino', serif
    margin-top 0
    margin-bottom 0
    font-size 1.75rem
    line-height 1.5

.home-startups
.home-dips
  position relative
  display flex
  flex-direction column
  justify-content center
  overflow hidden
  min-height 400px
  width 50%
  text-decoration none
  @extend $text-center
  @extend $text-white
  transition 500ms all ease-in-out
  
  &:before
    position absolute
    top -2rem
    right -2rem
    bottom -2rem
    left -2rem
    border 2px solid white
    content ''
    transition inherit
    
  &:hover:before
    top 2rem
    right 2rem
    bottom 2rem
    left 2rem

.home-startups
  background url('/img/home-startups.jpg') center no-repeat
  background-size cover
    
.home-dips
  background url('/img/home-dips.jpg') center no-repeat
  background-size cover
  
.home-testimonies
  padding-top 6rem
  padding-bottom 6rem
  wrapped()

  .title
    @extend $text-center

.home-direction
  display flex
  height 55vh
  align-items center
  justify-content center
  background url('/img/home-direction.jpg') center no-repeat
  background-size cover
  @extend $text-center
  
  .title
  .text
    @extend $text-white
    
  .btn
    margin-top 1rem

.home-press
  margin-top 8rem
  margin-bottom 8rem
  wrapped()
  text-align center