.burguerIcon
  padding 0
  margin 0
  background-color transparent
  cursor pointer
  width 2.5rem
  height 2.5rem
  position relative
  border 1px solid tomato
  display flex
    
.burguerIcon-inner
  top 0
  
  &,
  &:before,
  &:after
    width 100%
    height 4px
    background-color white
    position absolute
    
  &:before,
  &:after
    content ''
  
  &:before
    top 30px
  
  &:after
    top 20px

