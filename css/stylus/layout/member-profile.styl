.basic-container
  width 100%
  height 100vh
  background-color #0A2A43
  display flex
  align-items center
  justify-content center
  
.member-profile
  
  &-container
    width 90%
    max-height 800px
    height 80vh
    background-color white
    overflow hidden
    border-radius 5px
    display flex
    align-items center

  &-info
    padding-left 3rem
    padding-right 3rem
    width 50%
    
  &-photo
    width 50%
    height 100%
    background url('/img/team/team-francis.jpg') center no-repeat
    background-size cover
  
  &-name
    @extend .title
    margin-bottom 0
    color #0A2A43
    
  &-title
    @extend .title-tag
    
  &-quote
    @extend .title
    font-style italic
    font-size responsive
    margin-bottom 2rem
    
  &-socialMedia
    display flex
    margin-top 2rem
    align-items center
    
    & img
      display block
      
.socialMedia-icon
  margin-right 2rem